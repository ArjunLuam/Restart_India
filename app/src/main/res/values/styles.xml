<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/poppins_family</item>
    </style>

    <style name="ButtonFilled" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">24dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">24dp</item>
        <item name="textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

</resources>